{
  "manifest_version": 3,
  "name": "GitSync",
  "version": "0.0.1",
  "description": "Sync Firefox windows, tabs, and tab groups via GitHub",
  "author": "k0src",
  "homepage_url": "https://github.com/k0src/gitsync",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": ["tabs", "tabGroups", "storage", "activeTab", "alarms"],

  "host_permissions": ["https://api.github.com/*"],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "gitsync@k0src",
      "strict_min_version": "139.0"
    }
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "GitSync",
    "default_icon": "icons/icon-96.png"
  }
}
